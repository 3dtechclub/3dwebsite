    .card-columns{
          column-count: 3;
          -webkit-column-count: 3;
          -moz-column-count: 3;
        }
}
@media screen and (min-width:1500px){
    .card-columns{
          column-count: 4;
          -webkit-column-count: 4;
          -moz-column-count: 4;
        }
}
.card:hover #imagescard{
        filter: brightness(90%);
      }
      .card{
        opacity: 0;
        border-radius: 15px 15px 15px 15px;
         border-width: 4px;
          padding: 10px;          
          border-color: white;
          transition: ease;
          transition-duration: 0.5s;  
        -moz-transition-duration: 0.5s;
        -webkit-transition-duration: 0.5s;
      }
      .card:hover{
        border-color: rgba(239, 241, 244, 0.986);
        border-radius: 15px 15px 15px 15px;border-width: 4px;padding: 1px;
        background-color: rgba(239, 241, 244, 0.986);
        transition: ease;
        transition-duration: 0.5s;  
        -moz-transition-duration: 0.5s;
        -webkit-transition-duration: 0.5s;
      }
.eventappear{
  
  animation: fadeInUpAnimation ease 0.75s ;
        animation-iteration-count: 1; 
        animation-fill-mode: forwards;
        -webkit-animation: fadeInUpAnimation ease 0.75s;
        -webkit-animation-iteration-count: 1; 
        -webkit-animation-fill-mode: forwards;
}


